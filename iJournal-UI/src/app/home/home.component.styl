input, button {
    border: 2px solid #3498db;
    padding: 5px 5px;
    background: none;
    color: white;
    border-radius: 24px;
    outline: none;
    transition: 0.25s;
}
input:disabled{
    border: none;
}

button{
    border-color: #2ecc71;
    cursor pointer;
}
button:hover{
    background: #2ecc71;
}
button:disabled{
    background: none
    cursor: default;
    color: gray;
}

input:focus{
    border-color: #2ecc71;
}

select{
    border: 2px solid #3498db;
    padding: 5px 5px;
    background: none;
    color: #2ecc71;
    border-radius: 24px;
    outline: none;
    transition: 0.25s;
}
select option{
    background: none;
}

.checkbox{
    background: none;
    border: 1px solid #3498db;
}
