.main   { 
    margin-left: 300px;
    font-size: 28px; 
    padding: 0px 10px;
}

input, button{
    border: 2px solid #3498db;
    padding: 5px 5px;
    background: none;
    color: white;
    border-radius: 24px;
    outline: none;
    transition: 0.25s;
}
input:disabled{
    border: none;
}

input:focus{
    border-color: #2ecc71;
}

button{
    border-color: #2ecc71;
    cursor pointer;
}
button:hover{
    background: #2ecc71;
}

mat-list{
    margin: 5rem;
    width: 50rem;
}

.date-filter{
    margin-left: inherit;
    margin-top: 2rem;
}